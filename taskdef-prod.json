{
    "family": "hello-server-prod",
    "networkMode": "bridge",
    "memory": "256",
    "requiresCompatibilities": [
      "EC2"
    ],
    "containerDefinitions": [
      {
        "name": "hello-server",
        "image": "<IMAGE_NAME>",
        "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
            "awslogs-group": "/ecs/hello-server-prod",
            "awslogs-region": "us-east-1",
            "awslogs-stream-prefix": "ecs"
          }
        },
        "portMappings": [
          {
            "containerPort": 80,
            "protocol": "tcp"
          }
        ],
        "essential": true
      }
    ]
  }
  